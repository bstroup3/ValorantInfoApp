@namespace ValorantInfoApp.Features.Pages.Components.AgentCard

<MudItem xs="3">
    <MudPaper Class="card align-center">
        <MudImage Src="@PictureUri" Style="height: 20vw; width: 20vw;" />
        <MudText Typo="Typo.h6">@Name</MudText>
    </MudPaper>
</MudItem>

@code
{
    [Parameter] public string PictureUri { get; set; } = null!;
    [Parameter] public string Name { get; set; } = null!;
}
