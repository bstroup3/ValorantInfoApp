@namespace ValorantInfoApp.Features.Pages.Components.MapCard
@inject NavigationManager Navigation

<MudItem xs="4">
    <MudPaper Class="card align-center" Style="cursor: pointer;" @onclick="RedirectToPage">
        <MudImage Src="@PictureUri" Style="height: auto; width: 100%; margin-top: 1vw;" />
        <MudText Typo="Typo.h6">@Name</MudText>
    </MudPaper>
</MudItem>

@code
{
    [Parameter] public string PictureUri { get; set; } = null!;
    [Parameter] public string Name { get; set; } = null!;
    [Parameter] public Guid Id { get; set; }

    private void RedirectToPage()
    {
        Navigation.NavigateTo($"maps/{Id}");
    }
}
